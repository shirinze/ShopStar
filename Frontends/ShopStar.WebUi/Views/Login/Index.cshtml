@model CreateLoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ShopStar Register</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/registerform/css/register.css">
</head>
<body>
    <div class="form_wrapper">
        <div class="form_container">
            <div class="title_container">
                <h2>welcome to ShopStar</h2>
            </div>
            <div class="row clearfix">
                <div class="">
                    <form method="post">
                       
                        <div class="input_field">
                            <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                            <input type="password" asp-for="Password"  placeholder="Password" required />
                        </div>
                        <div class="input_field">
                            <span><i aria-hidden="true" class="fa fa-user"></i></span>
                            <input type="text" asp-for="UserName" placeholder="User Name" required />
                        </div>
                      
                        <input class="button" type="submit" value="Login" />
                        <br />
                        <br />
                        <div class="text">
                            <h6>Do not have an account? <a href="/Register/Index/">Register now</a></h6>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>