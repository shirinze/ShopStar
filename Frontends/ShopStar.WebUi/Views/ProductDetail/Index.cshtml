
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UiLayout/_UiLayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Home</a>
                <a class="breadcrumb-item text-dark" href="#">Shop</a>
                <span class="breadcrumb-item active">Shop Detail</span>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ImageSliderProductDetailComponentPartial",new {id=ViewBag.x})
        @await Component.InvokeAsync("_FeatureProductDetailComponentPartial",new {id=ViewBag.x})    
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Description</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Information</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Reviews (0)</a>
                </div>
                <div class="tab-content">
                    @await Component.InvokeAsync("_DescriptionProductDetailComponentPartial",new {id=ViewBag.x})
                    @await Component.InvokeAsync("_InformationProductDetailComponentPartial", new { id = ViewBag.x })
                    @await Component.InvokeAsync("_ReviewProductDetailComponentPartial")
                   
                </div>
            </div>
        </div>
    </div>
</div>


