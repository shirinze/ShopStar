@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>Product Name</label>
                        <input type="text" class="form-control" asp-for="ProductName" />
                        <br />
                        <label>Product Price</label>
                        <input type="text" class="form-control" asp-for="ProductPrice" />
                        <br />
                        <label>Image Url</label>
                        <input type="text" class="form-control" asp-for="ProductImageUrl" />
                        <br />
                        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.CategoryValues, new {@class="form-control"})
                        <br />
                        <label>Description</label>
                        <textarea  class="form-control" rows="5" asp-for="ProductDecription" ></textarea>
                        <br />
                        <button class="btn btn-primary">Add Product</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

