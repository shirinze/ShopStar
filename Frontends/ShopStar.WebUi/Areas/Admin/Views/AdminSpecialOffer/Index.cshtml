@model List<ResultSpecialOfferDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>SubTitle</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td><a href="/Admin/AdminSpecialOffer/DeleteSpecialOffer/@item.SpecialOfferId" class="btn btn-danger">Delete</a></td>
                                    <td><a href="/Admin/AdminSpecialOffer/UpdateSpecialOffer/@item.SpecialOfferId" class="btn btn-success">Update</a></td>

                                </tr>

                            }

                        </tbody>
                    </table>
                    <br />
                    <a href="/Admin/AdminSpecialOffer/CreateSpecialOffer/" class="btn btn-primary">New Offer</a>
                </div>
            </div>
        </div>
    </div>
</section>

