@model List<ShopStar.DtosLayer.Dtos.CatalogDtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}



<section class="content container-fluid">
    <div class="row">
       
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Categoies</h4>
                <p>You can manage category operations from this page.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Category Name</th>
                                <th>Category's products</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.CategoryID</th>
                                    <td>@item.CategoryName</td>
                                    <td><a href="#" class="btn btn-warning">Category's products</a></td>
                                    <td><a href="#" class="btn btn-danger">Delete</a></td>
                                    <td><a href="#" class="btn btn-success">Update</a></td>
                                 
                                </tr>

                            }

                        </tbody>
                    </table>
                    <td><a href="#" class="btn btn-primary">New Category</a></td>
                </div>
            </div>
        </div>
    </div>
</section>