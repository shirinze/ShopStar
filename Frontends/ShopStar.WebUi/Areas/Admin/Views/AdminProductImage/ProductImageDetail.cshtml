@model UpdateProductImageDto
@{
    ViewData["Title"] = "ProductImageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">

                        <input type="hidden" class="form-control" asp-for="ProductID" />
                        <input type="hidden" class="form-control" asp-for="ImageID" />
                        <label>Image 1</label>
                        <input type="text" class="form-control" asp-for="Image1" />
                        <br />
                        <label>Image 2</label>
                        <input type="text" class="form-control" asp-for="Image2" />
                        <br />
                        <label>Image 3</label>
                        <input type="text" class="form-control" asp-for="Image3" />
                        <br />
                        <label>Image 4</label>
                        <input type="text" class="form-control" asp-for="Image4" />
                        <br />
                        <button class="btn btn-primary">Update Image</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

