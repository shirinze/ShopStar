@model UpdateProductDetailDto
@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">

                        
                        <input type="hidden" class="form-control" asp-for="ProductDetailID" />
                        <input type="hidden" class="form-control" asp-for="ProductId" />
                        <label>Product Description</label>
                        <textarea rows="5" class="form-control" asp-for="ProductDescription"></textarea>
                        <br />
                        <label>Product Info</label>
                        <textarea rows="5" class="form-control" asp-for="ProductInfo"></textarea>
                        <br />
                       
                        <button class="btn btn-primary">Update ProductDetail</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

