@model UpdateCommentDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        
                        <input type="hidden"  class="form-control" asp-for="UserCommentId" />
                        <input type="text"  class="form-control" asp-for="ProductId" /><br />
                        <label>User</label>
                        <input type="text"  class="form-control" asp-for="NameSureName" />
                        <br />
                        <label>ImageUrl</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <br />
                         <label>Rate</label>
                        <input type="text" class="form-control" asp-for="Rating" />
                        <br />
                        <label>CommentDetail</label>
                        <textarea rows="5" class="form-control" asp-for="CommentDetail"></textarea>
                        <br />
                        <label>DateTime</label>
                        <input type="text" class="form-control" asp-for="CreatedDate" />
                        <br />
                        <button class="btn btn-primary">Update Category</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section

