@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;

}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>User</th>
                                <th>Comment</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.NameSureName</td>
                                    <td>@item.CommentDetail</td>
                                    <td>@item.CreatedDate.ToShortDateString()</td>
                                    <td>@item.Status</td>
                                    <td><a href="/Admin/AdminComment/DeleteComment/@item.UserCommentId" class="btn btn-danger">Delete</a></td>
                                    <td><a href="/Admin/AdminComment/UpdateComment/@item.UserCommentId" class="btn btn-success">Update</a></td>

                                </tr>

                            }

                        </tbody>
                    </table>
                    <br />
                </div>
            </div>
        </div>
    </div>
</section>

